<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Quadratic Solver & Grade Converter</title>
<style>
    body {
        font-family: Arial, sans-serif;
        margin: 30px auto;
        max-width: 700px;
        line-height: 1.6;
        background: #f9fafc;
        color: #333;
    }
    h1, h2 {
        text-align: center;
        color: #0044aa;
    }
    form {
        background: #fff;
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 25px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }
    label {
        display: inline-block;
        width: 25%;
        font-weight: bold;
    }
    input[type="number"] {
        width: 40%;
        padding: 5px;
        margin: 5px 0;
    }
    button {
        padding: 8px 16px;
        margin: 10px 5px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
    button:hover { background-color: #0056b3; }
    .result {
        margin-top: 10px;
        background: #eef;
        padding: 10px;
        border-radius: 5px;
    }
    .error {
        color: red;
        font-weight: bold;
    }
    hr {
        border: 1px solid #ddd;
        margin: 30px 0;
    }
</style>
</head>
<body>

<h1>ICT251: Quadratic Solver & Grade Converter</h1>
<p style="text-align:center;">Enter your values below to calculate quadratic roots or convert a numeric score to a grade.</p>

<!-- Quadratic Solver Section -->
<h2>1. Quadratic Equation Solver</h2>
<form id="quadraticForm">
    <label for="a">a:</label>
    <input type="number" id="a" step="any" required><br>
    <label for="b">b:</label>
    <input type="number" id="b" step="any" required><br>
    <label for="c">c:</label>
    <input type="number" id="c" step="any" required><br>

    <button type="button" onclick="solveQuadratic()">Compute</button>
    <button type="reset" onclick="clearQuadratic()">Reset</button>

    <div id="quadError" class="error"></div>
    <div id="quadResult" class="result"></div>
</form>

<hr>

<!-- Grade Converter Section -->
<h2>2. Numeric Score to Letter Grade</h2>
<form id="gradeForm">
    <label for="score">Score (0‚Äì100):</label>
    <input type="number" id="score" min="0" max="100" required><br>

    <button type="button" onclick="convertGrade()">Compute</button>
    <button type="reset" onclick="clearGrade()">Reset</button>

    <div id="gradeError" class="error"></div>
    <div id="gradeResult" class="result"></div>
</form>

<script>
// ---- Quadratic Solver ----
function solveQuadratic() {
    const a = parseFloat(document.getElementById("a").value);
    const b = parseFloat(document.getElementById("b").value);
    const c = parseFloat(document.getElementById("c").value);
    const errorDiv = document.getElementById("quadError");
    const resultDiv = document.getElementById("quadResult");
    errorDiv.textContent = "";
    resultDiv.textContent = "";

    if (isNaN(a) || isNaN(b) || isNaN(c)) {
        errorDiv.textContent = "‚ùå Please enter valid numbers for a, b, and c.";
        return;
    }
    if (a === 0) {
        errorDiv.textContent = "‚ùå Coefficient 'a' must not be zero.";
        return;
    }

    const D = b*b - 4*a*c;
    let message = `Discriminant (D) = ${D.toFixed(3)}<br>`;

    if (D > 0) {
        const r1 = (-b + Math.sqrt(D)) / (2*a);
        const r2 = (-b - Math.sqrt(D)) / (2*a);
        message += `‚úÖ Two distinct real roots:<br>x‚ÇÅ = ${r1.toFixed(3)}, x‚ÇÇ = ${r2.toFixed(3)}`;
    } else if (D === 0) {
        const r = -b / (2*a);
        message += `‚öôÔ∏è One real repeated root:<br>x = ${r.toFixed(3)}`;
    } else {
        const real = (-b / (2*a)).toFixed(3);
        const imag = (Math.sqrt(-D) / (2*a)).toFixed(3);
        message += `üí° Two complex conjugate roots:<br>x‚ÇÅ = ${real} + ${imag}i, x‚ÇÇ = ${real} - ${imag}i`;
    }

    resultDiv.innerHTML = message;
}

function clearQuadratic() {
    document.getElementById("quadError").textContent = "";
    document.getElementById("quadResult").textContent = "";
}

// ---- Grade Converter ----
function convertGrade() {
    const score = parseFloat(document.getElementById("score").value);
    const errorDiv = document.getElementById("gradeError");
    const resultDiv = document.getElementById("gradeResult");
    errorDiv.textContent = "";
    resultDiv.textContent = "";

    if (isNaN(score)) {
        errorDiv.textContent = "‚ùå Please enter a numeric score.";
        return;
    }
    if (score < 0 || score > 100) {
        errorDiv.textContent = "‚ùå Score must be between 0 and 100.";
        return;
    }

    let grade;
    if (score >= 85) grade = "A+";
    else if (score >= 75) grade = "A";
    else if (score >= 65) grade = "B+";
    else if (score >= 60) grade = "B";
    else if (score >= 55) grade = "C+";
    else if (score >= 50) grade = "C";
    else grade = "D";

    resultDiv.innerHTML = `‚úÖ Score ${score} ‚Üí Grade ${grade}`;
}

function clearGrade() {
    document.getElementById("gradeError").textContent = "";
    document.getElementById("gradeResult").textContent = "";
}
</script>

</body>
</html>
